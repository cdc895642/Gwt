<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HorizontalPanel width="100%" height="100%">
        <g:cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
        <g:VerticalPanel spacing="10">
            <g:FlowPanel>
                <g:InlineLabel ui:field="loginLabel" styleName="label"/>
                <g:TextBox ui:field="login" styleName="input"/>
            </g:FlowPanel>
            <g:FlowPanel>
                <g:InlineLabel ui:field="passwordLabel" styleName="label"/>
                <g:VerticalPanel styleName="panel">
                <g:PasswordTextBox ui:field="password" styleName="input"/>
                    <g:Button ui:field="signin" text="войти" styleName="button"/>
                </g:VerticalPanel>
            </g:FlowPanel>
        </g:VerticalPanel>
        </g:cell>
    </g:HorizontalPanel>

</ui:UiBinder>